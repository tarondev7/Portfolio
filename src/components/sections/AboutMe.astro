---
import { getAndGroupUniqueTags } from "../../lib/utils";
import { PROFILE } from "../../content/profileData";


const tagsMap = await getAndGroupUniqueTags();

const technologies = PROFILE.technologies;
const skills = PROFILE.skills;
---

<div class="flex flex-col gap-2 animate-appear">
  <p class="text-sm font-light">{PROFILE.headLine}</p>
  <!--<span class="text-sm font-light">üéØ Learn, Share and Grow Ô∏è</span>-->

  <hr/>

  <p class="text-sm font-light">Languages & Frameworks:</p>
  <ul class="list-inside list-disc">
    {
      technologies.map((technology) => {
        if (tagsMap.has(technology)) {
          return (
            <li>
              <a href=`/tags/${technology}` class=" hover:font-bold">
                {technology}
              </a>
            </li>
          )
        } else {
          return (
            <li>
              <span>
                {technology}
              </span>
            </li>
          )
        }

      })
    }
  </ul>
  <p class="text-sm font-light">Core Skills & Tools:</p>
  <ul class="list-inside list-disc">
    {
      skills.map((skill) => {
        if (tagsMap.has(skill)) {
          return (
            <li>
              <a>
                {skill}
              </a>
            </li>
          )
        } else {
          return (
            <li>
              <span>
                {skill}
              </span>
            </li>
          )
        }

      })
    }
  </ul>

  <p class="text-sm font-light">
    More about my <a href="/projects" class="underline hover:font-bold">Projects</a> and my <a href="/experiences"
                                                                                               class="underline hover:font-bold">Experiences</a>.
  </p>
</div>

